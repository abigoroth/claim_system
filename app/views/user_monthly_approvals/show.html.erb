
<p>
  <strong>Staff :</strong>
  <%= @user_monthly_approval.staff.name %>
</p>

<p>
  <strong>Company :</strong>
  <%= @user_monthly_approval.staff.company.name %>
</p>

<p>
  <strong>Created :</strong>
  <%= @user_monthly_approval.created %>
</p>

<p>
  <strong>Status :</strong>
  <%= @user_monthly_approval.status %>
</p>

